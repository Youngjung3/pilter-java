<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp"
    android:layout_margin="5dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/ll_rv_item_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/pill"
                android:layout_width="37dp"
                android:layout_height="30dp"
                android:gravity="center" />
            <TextView
                android:id="@+id/txt_rv_item_list_mediName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="mediName"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:id="@+id/rl_rv_item_list"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_rv_item_list_startDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/black"

                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/etc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_rv_item_list_startDate"
                    android:layout_marginLeft="5dp"
                    android:text="~"
                    android:textColor="@color/black"

                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/txt_rv_item_list_endDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/etc"
                    android:layout_marginLeft="5dp"
                    android:text="00"
                    android:textColor="@color/black"

                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_rv_item_list_2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/rl_rv_item_list"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_rv_item_list_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월"
                    android:textColor="@color/black"

                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/txt_rv_item_list_tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_rv_item_list_mon"
                    android:text="화"
                    android:textColor="@color/black"

                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/txt_rv_item_list_wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_rv_item_list_tue"
                    android:text="수"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/txt_rv_item_list_thu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_rv_item_list_wed"
                    android:text="목"
                    android:textColor="@color/black"

                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/txt_rv_item_list_fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_rv_item_list_thu"
                    android:text="금"
                    android:textColor="@color/black"

                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/txt_rv_item_list_sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_rv_item_list_fri"
                    android:text="토"
                    android:textColor="@color/black"

                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/txt_rv_item_list_sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_rv_item_list_sat"
                    android:text="일"
                    android:textColor="@color/black"

                    android:textSize="18dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/rl_rv_item_list_2"
                android:gravity="center">

                <TextView
                    android:id="@+id/etc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="하루"

                    android:textColor="@color/black"
                    android:textSize="18dp"/>

                <TextView
                    android:id="@+id/txt_rv_item_list_timesPerDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/etc2"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="@color/black"

                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_rv_item_list_timesPerDay"
                    android:text="번"
                    android:textColor="@color/black"

                    android:textSize="18dp" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lay1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:src="@drawable/ic_baseline_settings_24"
                android:id="@+id/btn_go_setting"
                android:layout_width="37dp"
                android:layout_height="30dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

